{
  "name": "trmnl-cli",
  "version": "0.1.2",
  "description": "CLI tool for TRMNL e-ink displays - send, validate, and track payloads",
  "author": "peetzweg",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/peetzweg/openclaw-trmnl"
  },
  "homepage": "https://github.com/peetzweg/openclaw-trmnl#readme",
  "bugs": {
